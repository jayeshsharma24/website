pipeline {
    agent any
    tools {
        jdk "JDK21"
        maven "MAVEN3.9"
    }
      environment {
        DOCKER_IMAGE_NAME = "jayeshsharma24/website-project"  // Name for your Docker image
        WAR_FILE_PATH = "target/website-v2.war"      // Path to the WAR file
    }

    stages {
        stage('Git checkout') {
            steps {
                git branch: 'web', url: 'https://github.com/jayeshsharma24/website.git'
            }
        }
        stage('Build') {
            steps {
                sh """
                    echo '--------------------building stage--------------------'
                                   """
                sh 'mvn clean install -DskipTests'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
            stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image using the Dockerfile
                    sh "docker build -t ${DOCKER_IMAGE_NAME} ."
                }
            }
        }
          stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container in detached mode and map ports
                    sh "docker run -d -p 8082:8082 ${DOCKER_IMAGE_NAME}"
                }
            }
        }
        

      stage('docker cleanup') {
            steps {
                sh """
                    echo '______________________________deleting all containers_________________________'
                """
                sh 'docker system prune -f'
            }
        }
        stage('fourth-stage') {
            steps {
                sh """
                    echo ''
                """
            }
        }
    }
}
